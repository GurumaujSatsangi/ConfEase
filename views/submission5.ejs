<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DEI CMT</title>
    <link rel="shortcut icon" href="/dei_logo.png" type="image/x-icon" />
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <%- include('partials/dashboard/header') %>
    <div class="container">
      <% if (message) { %>
        <div class="alert alert-primary alert-dismissible fade show" role="alert">
          <%= message %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
      <h6>
        Submit Revised Paper for your submission titled
        <b><%= submission.title %></b>
      </h6>
      <hr />
      <form
        action="/submit-revised-paper"
        method="POST"
        enctype="multipart/form-data"
      >
        <div class="form-group">
          <input
            type="text"
            readonly
            hidden
            value="<%=submission.submission_id %>"
            name="submission_id"
            class="form-control"
            id="submissionId"
            aria-describedby="submissionHelp"
            placeholder=""
          />
        </div>


        <!-- Reviewer Feedback Section -->
        <div class="mt-4">
          <h5>Reviewer Feedback</h5>
         

          <% if (reviewerData && reviewerData.length > 0) { %>
            <div class="accordion" id="reviewFeedbackAccordion">
              <% reviewerData.forEach((review, index) => { %>
                <div class="accordion-item">
                  <h2 class="accordion-header">
                    <button class="accordion-button <% if (index !== 0) { %>collapsed<% } %>" type="button" data-bs-toggle="collapse" data-bs-target="#review<%= index %>" aria-expanded="<% if (index === 0) { %>true<% } else { %>false<% } %>" aria-controls="review<%= index %>">
                      <strong>Reviewer <%= index + 1 %></strong>
                      <% if (review.mean_score) { %>
                        <span class="badge bg-secondary ms-2">Score: <%= review.mean_score %>/5</span>
                      <% } %>
                    </button>
                  </h2>
                  <div id="review<%= index %>" class="accordion-collapse collapse <% if (index === 0) { %>show<% } %>" data-bs-parent="#reviewFeedbackAccordion">
                    <div class="accordion-body">
                      <div class="row mb-3">
                        <div class="col-md-6">
                          <table class="table table-sm">
                            <tr>
                              <th>Originality</th>
                              <td>
                                <% if (review.originality_score) { %>
                                  <span class="badge bg-info"><%= review.originality_score %>/5</span>
                                <% } else { %>
                                  <span class="text-muted">N/A</span>
                                <% } %>
                              </td>
                            </tr>
                            <tr>
                              <th>Relevance</th>
                              <td>
                                <% if (review.relevance_score) { %>
                                  <span class="badge bg-info"><%= review.relevance_score %>/5</span>
                                <% } else { %>
                                  <span class="text-muted">N/A</span>
                                <% } %>
                              </td>
                            </tr>
                            <tr>
                              <th>Technical Quality</th>
                              <td>
                                <% if (review.technical_quality_score) { %>
                                  <span class="badge bg-info"><%= review.technical_quality_score %>/5</span>
                                <% } else { %>
                                  <span class="text-muted">N/A</span>
                                <% } %>
                              </td>
                            </tr>
                          </table>
                        </div>
                        <div class="col-md-6">
                          <table class="table table-sm">
                            <tr>
                              <th>Clarity</th>
                              <td>
                                <% if (review.clarity_score) { %>
                                  <span class="badge bg-info"><%= review.clarity_score %>/5</span>
                                <% } else { %>
                                  <span class="text-muted">N/A</span>
                                <% } %>
                              </td>
                            </tr>
                            <tr>
                              <th>Impact</th>
                              <td>
                                <% if (review.impact_score) { %>
                                  <span class="badge bg-info"><%= review.impact_score %>/5</span>
                                <% } else { %>
                                  <span class="text-muted">N/A</span>
                                <% } %>
                              </td>
                            </tr>
                            <tr>
                              <th>Mean Score</th>
                              <td>
                                <% if (review.mean_score) { %>
                                  <span class="badge bg-success"><%= review.mean_score %>/5</span>
                                <% } else { %>
                                  <span class="text-muted">N/A</span>
                                <% } %>
                              </td>
                            </tr>
                          </table>
                        </div>
                      </div>
                      <div class="mt-3">
                        <h6><strong>Remarks</strong></h6>
                        <div class="p-3 bg-light rounded">
                          <% if (review.remarks && review.remarks.trim() !== '') { %>
                            <%= review.remarks %>
                          <% } else { %>
                            <span class="text-muted"><em>No remarks provided by the reviewer.</em></span>
                          <% } %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <% }); %>
            </div>
          <% } else { %>
            <div class="alert alert-warning">
              <i class="bi bi-exclamation-triangle"></i> No reviewer feedback available yet. Please check back later.
            </div>
          <% } %>
        </div>

        <div class="form-group">
          <label for="revisedPaperFile">
            <strong>Upload Revised Paper</strong>
            <span class="text-danger">*</span>
          </label>
          <input 
            type="file" 
            required 
            class="form-control" 
            name="file"
            id="revisedPaperFile"
            accept=".pdf,.doc,.docx"
          />
          <small class="form-text text-muted">Maximum file size: 4MB</small>
        </div>

      

        <div class="mt-4">
          <button type="submit" class="btn btn-outline-primary">
            <i class="bi bi-upload"></i> Submit Revised Paper
          </button>
       
        </div>
      </form>
      <div class="container px-5 my-5"></div>
      <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>

      <!-- Spinner Modal -->
      <div
        class="modal fade"
        id="loadingModal"
        tabindex="-1"
        aria-hidden="true"
        data-bs-backdrop="static"
        data-bs-keyboard="false"
      >
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content bg-transparent border-0 shadow-none">
            <div
              class="modal-body d-flex justify-content-center align-items-center"
            >
              <div
                class="spinner-border text-primary"
                style="width: 3rem; height: 3rem"
                role="status"
              >
                <span class="visually-hidden"
                  >Please wait...submitting data.</span
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('partials/footer') %>
    <script src="/script.js"></script>
  </body>
</html>
