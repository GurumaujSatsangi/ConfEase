<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DEI CMT</title>

    <link rel="stylesheet" href="/styles.css" />
    <link rel="shortcut icon" href="/dei_logo.png" type="image/x-icon" />
  </head>
  <body>
    <%- include('../partials/dashboard/header') %>

    <div class="container">
      <h4>Create New Conference</h4>
      <hr />
      <form action="/create-new-conference" method="POST">
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            id="exampleInputEmail1"
            name="title"
            aria-describedby="emailHelp"
            placeholder="Conference Title"
            required
          />
        </div>

        <div class="form-group">
          <textarea
            class="form-control"
            id="exampleFormControlTextarea1"
            name="description"
            rows="3"
            placeholder="Conference Description"
          ></textarea>
        </div>

        <hr />

        <table class="table">
          <tr>
            <td>
              <div class="form-group">
                <label class="form-check-label" for="conference_start_date">
                  Conference Start Date
                </label>
                <input
                  type="date"
                  class="form-control"
                  id="exampleInputEmail1"
                  name="conference_start_date"
                  aria-describedby="emailHelp"
                  placeholder="Conference Start Date"
                  required
                />
              </div>
            </td>

            <td>
              <div class="form-group">
                <label class="form-check-label" for="conference_start_date">
                  Conference End Date
                </label>
                <input
                  type="date"
                  class="form-control"
                  id="exampleInputEmail1"
                  name="conference_end_date"
                  aria-describedby="emailHelp"
                  placeholder="Conference Start Date"
                  required
                />
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <div class="form-group">
                <label class="form-check-label" for="full_paper_submission">
                  Full Paper Submission
                </label>
                <input
                  type="date"
                  class="form-control"
                  id="exampleInputEmail1"
                  name="full_paper_submission"
                  aria-describedby="emailHelp"
                  placeholder="Conference Start Date"
                  required
                />
              </div>
            </td>
            <td>
              <div class="form-group">
                <label class="form-check-label" for="acceptance_notification">
                  Acceptance Notification
                </label>
                <input
                  type="date"
                  class="form-control"
                  id="exampleInputEmail1"
                  name="acceptance_notification"
                  aria-describedby="emailHelp"
                  placeholder="Conference Start Date"
                  required
                />
              </div>
            </td>
            <td>
              <div class="form-group">
                <label
                  class="form-check-label"
                  for="camera_ready_paper_submission"
                >
                  Final Camera Ready Paper Submission
                </label>
                <input
                  type="date"
                  class="form-control"
                  id="exampleInputEmail1"
                  name="camera_ready_paper_submission"
                  aria-describedby="emailHelp"
                  placeholder="Conference Start Date"
                  required
                />
              </div>
            </td>
          </tr>
        </table>

        <div class="form-group">
          <label for="numTracks">Number of Tracks</label>
          <input
            type="number"
            min="1"
            max="20"
            id="numTracks"
            class="form-control"
            value="1"
          />
        </div>

        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Track Title</th>
              <th>Track Reviewer's Email ID</th>
            </tr>
          </thead>
          <tbody id="tracksTableBody">
            <!-- Rows will be inserted here -->
          </tbody>
        </table>

        <div class="form-group">
          <input
            type="submit"
            class="btn btn-outline-success"
            value="Create Conference"
          />
        </div>
      </form>
    </div>
    <%- include('../partials/footer') %>
  </body>
  <script src="/script.js"></script>
</html>
