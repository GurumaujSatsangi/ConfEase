<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DEI CMT</title>

    <link rel="stylesheet" href="/styles.css" />
    <link rel="shortcut icon" href="/dei_logo.png" type="image/x-icon" />
  </head>
  <body>
    <%- include('../partials/dashboard/header') %>

    <div class="container">
      <h4>Welcome <%= user.name %> (<%= user.email %>)!</h4>
      <hr />
      <h4>Manage Conferences</h4>
      <a href="/chair/create-new-conference" class="btn btn-success"
        ><i class="bi bi-plus-circle"></i> Create Conference</a
      >
      <hr />
      <% if (conferences && conferences.length > 0) { %> <%
      conferences.forEach(function(conference) { %>
      <table class="table" border="1">
        <tbody>
          <tr>
            <td rowspan="2"><b>Title</b></td>
            <td colspan="2"><b>Conference Timeline</b></td>
            <td rowspan="2"><b>Full Paper Submission</b></td>
            <td rowspan="2"><b>Acceptance Notification</b></td>
            <td rowspan="2"><b>Final Camera Ready Paper Submission</b></td>
            <td rowspan="2"><b>Action</b></td>
          </tr>
          <tr>
            <td><b>Start Date</b></td>
            <td><b>End Date</b></td>
          </tr>
          <tr>
            <td><%= conference.title %></td>
            <td><%= conference.conference_start_date %></td>
            <td><%= conference.conference_end_date %></td>
            <td><%= conference.full_paper_submission %></td>
            <td><%= conference.acceptance_notification %></td>
            <td><%= conference.camera_ready_paper_submission %></td>
            <td>
              <a
                href="/chair/dashboard/view-submissions/<%= conference.conference_id %>"
                class="btn btn-primary"
                ><i class="bi bi-eye-fill"></i
              ></a>
              <br /><br />
              <a
                href="/chair/dashboard/manage-sessions/<%= conference.conference_id %>"
                class="btn btn-info"
                ><i class="bi bi-person-fill-gear"></i
              ></a>
              <br /><br />
              <a
                href="/chair/dashboard/edit-conference/<%= conference.conference_id %>"
                class="btn btn-warning"
                ><i class="bi bi-pencil-square"></i
              ></a>

              <br /><br />
              <a
                href="/chair/dashboard/delete-conference/<%= conference.conference_id %>"
                class="btn btn-danger"
                ><i class="bi bi-trash3-fill"></i
              ></a>
            </td>
          </tr>
        </tbody>
      </table>
      <% }); %> <% } else { %>
      <h2>No conferences to show.</h2>
      <% } %>

      <script src="/script.js"></script>
    </div>
    <%- include('../partials/footer') %>
  </body>
</html>
