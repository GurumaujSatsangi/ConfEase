<!DOCTYPE html>
<html lang="en">
 <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DEI CMT</title>
    <link rel="shortcut icon" href="/dei_logo.png" type="image/x-icon">
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    
    <%-include('../partials/dashboard/header') %>

      <div class="container">
        <% if (message) { %>
          <div class="alert alert-primary alert-dismissible fade show" role="alert">
            <%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>
        <h4>Manage Sessions</h4>
        <h6>Conference: <%= conference.title %></h6>
        <hr />
        
          <% if (tracks && tracks.length > 0) { %> <%
          tracks.forEach(function(track, idx) { // Find the count for this track
          var trackCount = 0; if (count && count.length > 0) { var found =
          count.find(function(tc) { return tc.track_id === track.track_id; }); if
          (found) trackCount = found.count; } %>
          <div class="card">
            <div class="card-body">
              <b><%= track.track_name %></b>
              <span class="badge bg-info text-dark" style="float: right">
                Submissions: <%= trackCount %>
              </span><br>
              <h6><a href="/panelist/active-session/<%= track.track_id %>">Session Link</a></h6>
           
              <br />
              <i
                >Reviewer: <% if (Array.isArray(track.track_reviewers)) { %> <%=
                track.track_reviewers.join(", ") %> <% } else { %> <%=
                track.track_reviewers %> <% } %> </i
              ><br /><br>
              <div class="table-responsive">
                <table class="table table-bordered table-sm">
                  <thead>
                    <tr>
                      <th scope="col">Session Date</th>
                      <th scope="col">Start Time</th>
                      <th scope="col">End Time</th>
                      <th scope="col">Panelists</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td><%= track.presentation_date %></td>
                      <td><%= track.presentation_start_time %></td>
                      <td><%= track.presentation_end_time %></td>
                      <td><%= track.panelists %></td>
                    </tr>
                  </tbody>
                </table>
              </div>

              <!-- Leaderboard Accordion -->
              <div class="accordion mt-3" id="accordion-<%= idx %>">
                <div class="accordion-item">
                  <h2 class="accordion-header" id="heading-<%= idx %>">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-<%= idx %>" aria-expanded="false" aria-controls="collapse-<%= idx %>">
                      <i class="bi bi-trophy me-2"></i>View Leaderboard
                    </button>
                  </h2>
                  <div id="collapse-<%= idx %>" class="accordion-collapse collapse" aria-labelledby="heading-<%= idx %>" data-bs-parent="#accordion-<%= idx %>">
                    <div class="accordion-body">
                      <% if (track.leaderboard && track.leaderboard.length > 0) { %>
                        <div class="table-responsive">
                          <table class="table table-striped table-sm leaderboard-table">
                            <thead class="table-dark">
                              <tr>
                                <th style="min-width: 60px;">Rank</th>
                                <th style="min-width: 150px;">Paper Title</th>
                                <th style="min-width: 120px;">Primary Author</th>
                                <th style="min-width: 120px;">Co-Authors</th>
                                <th style="min-width: 90px;">Reviewer</th>
                                <th style="min-width: 90px;">Panelist</th>
                                <th style="min-width: 90px;">Average</th>
                              </tr>
                            </thead>
                            <tbody>
                              <% track.leaderboard.forEach(function(submission) { %>
                                <tr class="<%= submission.rank ? (submission.rank <= 3 ? 'table-warning' : '') : 'table-light' %>">
                                  <td style="white-space: nowrap;">
                                    <% if (submission.rank) { %>
                                      <% if (submission.rank === 1) { %>
                                        <i class="bi bi-trophy-fill text-warning"></i> #<%= submission.rank %>
                                      <% } else if (submission.rank === 2) { %>
                                        <i class="bi bi-award-fill text-secondary"></i> #<%= submission.rank %>
                                      <% } else if (submission.rank === 3) { %>
                                        <i class="bi bi-award-fill text-dark"></i> #<%= submission.rank %>
                                      <% } else { %>
                                        #<%= submission.rank %>
                                      <% } %>
                                    <% } else { %>
                                      <span class="text-muted">N/A</span>
                                    <% } %>
                                  </td>
                                  <td style="max-width: 200px; word-wrap: break-word;">
                                    <strong class="d-block"><%= submission.title %></strong>
                                    <small class="text-muted d-block mt-1">Status: <%= submission.submission_status %></small>
                                  </td>
                                  <td style="word-wrap: break-word;"><%= submission.primary_author_formatted %></td>
                                  <td style="word-wrap: break-word;"><%= submission.co_authors_formatted %></td>
                                  <td style="text-align: center; white-space: nowrap;">
                                    <% if (submission.reviewerScore !== null) { %>
                                      <span class="badge bg-primary"><%= submission.reviewerScore %>/5</span>
                                    <% } else { %>
                                      <span class="badge bg-secondary">N/A</span>
                                    <% } %>
                                  </td>
                                  <td style="text-align: center; white-space: nowrap;">
                                    <% if (submission.panelistScore !== null) { %>
                                      <span class="badge bg-success"><%= submission.panelistScore %>/5</span>
                                    <% } else { %>
                                      <span class="badge bg-secondary">N/A</span>
                                    <% } %>
                                  </td>
                                  <td style="text-align: center; white-space: nowrap;">
                                    <% if (submission.averageScore !== null) { %>
                                      <span class="badge bg-<%= submission.averageScore >= 4 ? 'success' : submission.averageScore >= 3 ? 'warning' : 'danger' %> fs-6">
                                        <%= submission.averageScore %>/5
                                      </span>
                                    <% } else { %>
                                      <span class="badge bg-secondary">N/A</span>
                                    <% } %>
                                  </td>
                                </tr>
                              <% }); %>
                            </tbody>
                          </table>
                        </div>
                      <% } else { %>
                        <div class="text-center text-muted p-4">
                          <i class="bi bi-inbox display-4"></i>
                          <p class="mt-2">No submissions found for this track</p>
                        </div>
                      <% } %>
                    </div>
                  </div>
                </div>
              </div>

              <div class="mt-3">
                <a href="/chair/dashboard/edit-sessions/<%= track.track_id %>"
                  class="btn btn-warning"
                  role="button"
                  >Edit <i class="bi bi-pencil-square"></i></a>
              </div>
            
            </div>
          </div>
          <% }); %> <% } else { %>
          <h6>There are no tracks in this conference, please go back to the dashboard and click on 'Edit Conference' icon to add sessions.</h6>
          <% } %>
          <br />
          
       

       
      </div>
    <div
      class="modal fade"
      id="loadingModal"
      tabindex="-1"
      aria-hidden="true"
      data-bs-backdrop="static"
      data-bs-keyboard="false"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-transparent border-0 shadow-none">
          <div
            class="modal-body d-flex justify-content-center align-items-center"
          >
            <div
              class="spinner-border text-primary"
              style="width: 3rem; height: 3rem"
              role="status"
            >
              <span class="visually-hidden"
                >Please wait...submitting data.</span
              >
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
  <script src="/script.js"></script>

 <%-include('../partials/footer') %>
  </body>
</html>
