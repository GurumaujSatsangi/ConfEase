<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DEI CMT</title>
    <link rel="shortcut icon" href="/dei_logo.png" type="image/x-icon">
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <%-include('../partials/dashboard/header') %>

    <div class="container">
      <% if (message) { %>
        <div class="alert alert-primary alert-dismissible fade show" role="alert">
          <%= message %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
      <h4>Edit Conference</h4>
      <hr />
      <form
        action="/chair/dashboard/update-conference/<%= conference.conference_id %>"
        method="POST"
      >
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            id="exampleInputEmail1"
            name="title"
            aria-describedby="emailHelp"
            placeholder="Conference Title"
            value="<%= conference.title %>"
            required
          />
        </div>

        <div class="form-group">
          <textarea
            class="form-control"
            id="exampleFormControlTextarea1"
            name="description"
            rows="3"
            placeholder="Conference Description"
          >
              <%= conference.description %>
</textarea
          >
        </div>

        <hr />
        <div class="form-group">
          <label class="form-check-label" for="conference_start_date">
            Conference Start Date
          </label>
          <input
            type="date"
            class="form-control"
            id="exampleInputEmail1"
            name="conference_start_date"
            aria-describedby="emailHelp"
            placeholder="Conference Start Date"
            value="<%= conference.conference_start_date %>"
            required
          />
        </div>
        <div class="form-group">
          <label class="form-check-label" for="conference_start_date">
            Conference End Date
          </label>
          <input
            type="date"
            class="form-control"
            id="exampleInputEmail1"
            name="conference_end_date"
            aria-describedby="emailHelp"
            value="<%= conference.conference_end_date %>"
            placeholder="Conference Start Date"
            required
          />
        </div>
        <hr />

        <div class="form-group">
          <label class="form-check-label" for="full_paper_submission">
            Full Paper Submission
          </label>
          <input
            type="date"
            class="form-control"
            id="exampleInputEmail1"
            name="full_paper_submission"
            aria-describedby="emailHelp"
            value="<%= conference.full_paper_submission %>"
            placeholder="Conference Start Date"
            required
          />
        </div>
        <div class="form-group">
          <label class="form-check-label" for="acceptance_notification">
            Acceptance Notification
          </label>
          <input
            type="date"
            class="form-control"
            id="exampleInputEmail1"
            name="acceptance_notification"
            aria-describedby="emailHelp"
            value="<%= conference.acceptance_notification %>"
            placeholder="Conference Start Date"
            required
          />
        </div>

        <div class="form-group">
          <label class="form-check-label" for="camera_ready_paper_submission">
            Final Camera Ready Paper Submission
          </label>
          <input
            type="date"
            class="form-control"
            id="exampleInputEmail1"
            name="camera_ready_paper_submission"
            aria-describedby="emailHelp"
            value="<%= conference.camera_ready_paper_submission %>"
            placeholder="Conference Start Date"
            required
          />
        </div>

        <hr />

        <!-- Add this above your table -->
        <!-- Tracks Section -->
        <!-- Tracks Section -->
        <div class="form-group">
          <label for="numTracks">Number of Tracks</label>
          <input
            type="number"
            min="1"
            max="20"
            id="numTracks"
            class="form-control"
            value="<%= tracks.length %>"
            readonly
          />
        </div>

        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Track Title</th>
              <th>Track Reviewer's Email ID</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody id="tracksTableBody">
            <% tracks.forEach(function(track, idx) { %>
            <tr>
              <td>
                <input
                  type="text"
                  class="form-control"
                  name="track_title_<%= idx + 1 %>"
                  value="<%= track.track_name %>"
                  placeholder="Track Title <%= idx + 1 %>"
                  required
                />
              </td>
              <td>
                <input
                  type="email"
                  class="form-control"
                  name="track_reviewer_<%= idx + 1 %>"
                  value="<%= Array.isArray(track.track_reviewers) ? track.track_reviewers[0] : track.track_reviewers %>"
                  placeholder="Reviewer Email <%= idx + 1 %>"
                  required
                />
              </td>
              <td>
                <button
                  type="button"
                  class="btn btn-danger btn-sm delete-track"
                >
                  Delete
                </button>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
        <button type="button" class="btn btn-primary" id="addTrackBtn">
          Add Track
        </button>
        <hr />

        <div class="form-group">
          <input
            type="submit"
            class="btn btn-outline-primary"
            value="Update Conference"
          />
        </div>
      </form>

      <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>

      <!-- Spinner Modal -->
      <div
        class="modal fade"
        id="loadingModal"
        tabindex="-1"
        aria-hidden="true"
        data-bs-backdrop="static"
        data-bs-keyboard="false"
      >
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content bg-transparent border-0 shadow-none">
            <div
              class="modal-body d-flex justify-content-center align-items-center"
            >
              <div
                class="spinner-border text-primary"
                style="width: 3rem; height: 3rem"
                role="status"
              >
                <span class="visually-hidden"
                  >Please wait...submitting data.</span
                >
              </div>
            </div>
          </div>
        </div>
      </div>

      <script src="/script.js"></script>
    </div>

    <script>
      // Add new track row
      document
        .getElementById("addTrackBtn")
        .addEventListener("click", function () {
          const tbody = document.getElementById("tracksTableBody");
          const rowCount = tbody.querySelectorAll("tr").length + 1;
          const row = document.createElement("tr");
          row.innerHTML = `
    <td>
      <input type="text" class="form-control" name="track_title_${rowCount}" placeholder="Track Title ${rowCount}" required />
    </td>
    <td>
      <input type="email" class="form-control" name="track_reviewer_${rowCount}" placeholder="Reviewer Email ${rowCount}" required />
    </td>
    <td>
      <button type="button" class="btn btn-danger btn-sm delete-track">Delete</button>
    </td>
  `;
          tbody.appendChild(row);
          updateNumTracks();
        });

      function renderTrackRows(n) {
        const tbody = document.getElementById("tracksTableBody");
        tbody.innerHTML = "";
        for (let i = 1; i <= n; i++) {
          tbody.innerHTML += `
      <tr>
        <td>
          <div class="form-group">
            <input
              type="text"
              class="form-control"
              name="track_title_${i}"
              placeholder="Track Title ${i}"
              required
            />
          </div>
        </td>
        <td>
          <div class="form-group">
            <input
              type="email"
              class="form-control"
              name="track_reviewer_${i}"
              placeholder="Reviewer Email ${i}"
              required
            />
          </div>
        </td>
      </tr>
    `;
        }
      }

      document.querySelector("form").addEventListener("submit", function () {
        var loadingModal = new bootstrap.Modal(
          document.getElementById("loadingModal")
        );
        loadingModal.show();
      });

      document
        .getElementById("tracksTableBody")
        .addEventListener("click", function (e) {
          if (e.target.classList.contains("delete-track")) {
            e.target.closest("tr").remove();
            // Re-number the remaining rows' input names and placeholders
            const rows = document.querySelectorAll("#tracksTableBody tr");
            rows.forEach((tr, idx) => {
              tr.querySelector('input[type="text"]').name = `track_title_${
                idx + 1
              }`;
              tr.querySelector(
                'input[type="text"]'
              ).placeholder = `Track Title ${idx + 1}`;
              tr.querySelector('input[type="email"]').name = `track_reviewer_${
                idx + 1
              }`;
              tr.querySelector(
                'input[type="email"]'
              ).placeholder = `Reviewer Email ${idx + 1}`;
            });
            updateNumTracks();
          }
        });
      function updateNumTracks() {
        document.getElementById("numTracks").value = document.querySelectorAll(
          "#tracksTableBody tr"
        ).length;
      }
    </script>
    <%-include('../partials/footer')%>
  </body>
</html>
