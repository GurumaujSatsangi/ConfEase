<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/dei_logo.png" type="image/x-icon" />

    <link rel="stylesheet" href="/styles.css" />
    <title>DEI CMT - Local Auth</title>
  </head>
  <body>
    <%- include('partials/header') %>
    <div class="container mt-4">
        <h4>Author (Contributed Talks)</h4><hr>
      

      <div class="row">
        <div class="col-md-6">
          <div class="card">
            <h5 class="card-header">Login</h5>
            <div class="card-body">
              <form id="loginForm" method="POST" action="/login">
                <div class="mb-3">
                  <label for="loginEmail" class="form-label">Email</label>
                  <input type="email" class="form-control" id="loginEmail" name="email" required />
                </div>
                <div class="mb-3">
                  <label for="loginPassword" class="form-label">Password</label>
                  <input type="password" class="form-control" id="loginPassword" name="password" required />
                </div>
                <div class="d-flex align-items-center">
                  <button type="submit" class="btn btn-primary">Login</button>
                  <a href="/author/forgot-password" class="ms-3 small">Forgot password?</a>
                </div>
              </form>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="card">
            <h5 class="card-header">Register</h5>
            <div class="card-body">
              <form id="registerForm" method="POST" action="/register">
                <div class="mb-3">
                  <label for="regName" class="form-label">Full name</label>
                  <input type="text" class="form-control" id="regName" name="name" required />
                </div>
                <div class="mb-3">
                  <label for="regEmail" class="form-label">Email</label>
                  <input type="email" class="form-control" id="regEmail" name="email" required />
                </div>
                <div class="mb-3">
                  <label for="regPassword" class="form-label">Password</label>
                  <input type="password" class="form-control" id="regPassword" name="password" required />
                </div>
                <button type="submit" class="btn btn-success">Register</button>
              </form>
            </div>
          </div>
        </div>
      </div>

      <div class="mt-4">
        <p class="text-muted">You can also sign in with Google using the buttons on the previous page.</p>
      </div>
    </div>

    <script src="/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      // Intercept form submissions and use fetch + SweetAlert
      const loginForm = document.getElementById('loginForm');
      const registerForm = document.getElementById('registerForm');

      if (loginForm) {
        loginForm.addEventListener('submit', async (e) => {
          e.preventDefault();
          try {
            Swal.fire({ title: 'Please wait', allowOutsideClick: false, didOpen: () => Swal.showLoading() });
            const formData = new URLSearchParams(new FormData(loginForm));
            const resp = await fetch(loginForm.action, {
              method: 'POST',
              headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
              body: formData,
              credentials: 'same-origin'
            });
            const data = await resp.json();
            Swal.close();
            if (resp.ok && data.token) {
              // store token (optional) and redirect
              try { localStorage.setItem('jwt', data.token); } catch (err) { /* ignore */ }
              await Swal.fire({ icon: 'success', title: 'Login successful', text: 'Redirecting to dashboard...' });
              window.location.href = '/dashboard';
            } else {
              await Swal.fire({ icon: 'error', title: 'Login failed', text: data.error || 'Invalid credentials' });
            }
          } catch (err) {
            Swal.close();
            console.error('Login error', err);
            await Swal.fire({ icon: 'error', title: 'Error', text: 'An unexpected error occurred' });
          }
        });
      }

      if (registerForm) {
        registerForm.addEventListener('submit', async (e) => {
          e.preventDefault();
          try {
            Swal.fire({ title: 'Registering...', allowOutsideClick: false, didOpen: () => Swal.showLoading() });
            const formData = new URLSearchParams(new FormData(registerForm));
            const resp = await fetch(registerForm.action, {
              method: 'POST',
              headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
              body: formData,
              credentials: 'same-origin'
            });
            const data = await resp.json();
            Swal.close();
            if (resp.ok && data.token) {
              try { localStorage.setItem('jwt', data.token); } catch (err) { /* ignore */ }
              await Swal.fire({ icon: 'success', title: 'User Registered Successfully!', text: 'Redirecting to dashboard...' });
              window.location.href = '/dashboard';
            } else {
              await Swal.fire({ icon: 'error', title: 'Registration failed', text: data.error || 'Could not register' });
            }
          } catch (err) {
            Swal.close();
            console.error('Register error', err);
            await Swal.fire({ icon: 'error', title: 'Error', text: 'An unexpected error occurred' });
          }
        });
      }
    </script>
    <%- include('partials/footer') %>
  </body>
</html>
