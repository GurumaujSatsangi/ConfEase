<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Invitee - Reset password</title>
  <link rel="stylesheet" href="/styles.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
  <%- include('../partials/header') %>

  <div class="container">
    <h4>Reset your password</h4>
    <h6>Invitee / Invited Speaker</h6>
    <form id="resetForm">
      <input type="hidden" id="token" name="token" value="<%= token %>" />
      <label for="password">New password</label>
      <input class="form-control" id="password" name="password" type="password" required minlength="6" />
      <button class="btn btn-primary" type="submit">Set new password</button>
    </form>
  </div>
  <%- include('../partials/footer') %>

  <script>
    const form = document.getElementById('resetForm');
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const token = document.getElementById('token').value;
      const password = document.getElementById('password').value;
      try {
        const res = await fetch('/invitee/reset-password', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ token, password }) });
        const data = await res.json();
        if (data && data.success) {
          Swal.fire('Password updated', 'You are now signed in', 'success').then(() => { window.location = '/invitee/dashboard'; });
        } else {
          Swal.fire('Error', data.error || 'Unable to reset password', 'error');
        }
      } catch (err) {
        Swal.fire('Error', 'Server error', 'error');
      }
    });
  </script>
</body>
</html>