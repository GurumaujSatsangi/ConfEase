<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Invitee Login</title>
  <link rel="stylesheet" href="/styles.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
  <%- include('../partials/header') %>
  <div class="container">
    <h4>Author (Invited Talks)</h4>
    
     <div class="card">
            <h5 class="card-header">Login</h5>
            <div class="card-body">
              <form id="loginForm">
      <label for="email">Email</label>
      <input class="form-control" id="email" name="email" type="email" required />
      <label for="password">Password</label>
      <input class="form-control" id="password" name="password" type="password" required />
      <button class="btn btn-primary" type="submit">Sign in</button>
    </form>
    <p><a href="/invitee/forgot-password">Forgot your password?</a></p>
            </div>
          </div>



   
  </div>
  <%- include('../partials/footer') %>

  <script>
    const form = document.getElementById('loginForm');
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const email = document.getElementById('email').value;
      const password = document.getElementById('password').value;
      try {
        const res = await fetch('/invitee/login', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ email, password }) });
        const data = await res.json();
        if (data && data.success) {
          Swal.fire('Signed in', '', 'success').then(() => { window.location = '/invitee/dashboard'; });
        } else {
          Swal.fire('Error', data.error || 'Invalid credentials', 'error');
        }
      } catch (err) {
        Swal.fire('Error', 'Server error', 'error');
      }
    });
  </script>
</body>
</html>