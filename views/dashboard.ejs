<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AlgoLeap</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Google+Sans:wght@400;500;700&family=Roboto:wght@300;400;500&display=swap"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/a076d05399.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <header>
      <div class="header-left">
        <button class="menu-btn">
          <i class="fas fa-bars"></i>
        </button>
        <div class="logo">
          <img src="/dei_logo.png" alt="DEI" />
        </div>
      </div>

      <div class="header-right">
        <%= user.email %>
        <a href="/logout" class="btn btn-block" role="button"> Logout</a>
      </div>
    </header>

    <main>
      <div class="welcome-section">
        <div class="welcome-content">
          <div class="welcome-header">
            <h1>Welcome to DEI Conference Management Toolkit!</h1>
          </div>
        </div>
      </div>

      <div class="quick-access">
        <h2>Active Events</h2>
        <% if (conferences && conferences.length > 0) { %> <%
        conferences.forEach(function(conference) { %>
        <div class="card mb-3">
          <div class="card-header">
            <%= conference.title %>
            <!-- or whatever fields you have -->
          </div>
          <div class="card-body">
            <table class="table table-hover">
              <tr>
                <td>Conference Timeline</td>
                <td>Submission Timeline</td>
              </tr>
              <tr>
                <td>
                  <%= conference.conference_start_date %> - <%=
                  conference.conference_end_date %>
                </td>
                <td>
                  <%= conference.submission_start_date %> - <%=
                  conference.submission_end_date %>
                </td>
              </tr>
              <tr>
                <td>
                  <a
                    href="<%= conference.brochure %>"
                    class="btn btn-outline-warning"
                    tabindex="-1"
                    role="button"
                    aria-disabled="true"
                    >View Brochure</a
                  >
                </td>
                <td>
                  <ul class="list-group">
                    <li class="list-group-item">
                      <a
                        href="/submission/primary-author/<%= conference.id %>"
                        class="btn btn-outline-success"
                        tabindex="-1"
                        style="width: 380px"
                        role="button"
                        id="<%= conference.id %>"
                        aria-disabled="true"
                        >Submit a Paper as Primary Author)</a
                      >
                    </li>
                    <li class="list-group-item">
                      <a
                        href="/submission/co-author/<%= conference.id %>"
                        class="btn btn-outline-success"
                        tabindex="-1"
                        style="width: 380px"
                        role="button"
                        id="<%= conference.id %>"
                        aria-disabled="true"
                        >Join a Paper as Co-Author</a
                      >
                    </li>
                  </ul>
                </td>
              </tr>
            </table>
          </div>
        </div>
        <% }); %> <% } else { %>
        <h1>No Active Conferences Found</h1>
        <% } %>

        <hr />
        <h2>My Submissions</h2>
        <% if (userSubmissions && userSubmissions.length > 0) { %> <%
        userSubmissions.forEach(function(submission) { %>
        <div class="card mb-3">
          <div class="card-header">
            <%= submission.title %> <b>(Conference ID: <%= submission.conference_id %> | Submission ID: <%=submission.id %>)</b>
            <!-- or whatever fields you have -->
          </div>
          <div class="card-body">
            <table class="table table-hover">
              <tr>
                <td>Abstract</td>
                <td>Paper URL</td>
                <td>Co-Authors</td>
                <td>Paper Code</td>
              </tr>
              <tr>
                <td><%= submission.abstract %></td>
                <td><%= submission.paper_url %></td>
              
                <td><%= submission.co_authors %></td>
                <td><%= submission.paper_code %></td>
              </tr>
            </table>
          </div>
        </div>
        <% }); %> <% } else { %>
        <h1>No Submissions Found</h1>
        <% } %>
      </div>
    </main>

    <script src="/script.js"></script>
  </body>
</html>
