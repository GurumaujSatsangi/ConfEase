# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_USER=postgres
DB_HOST=postgres
DB_NAME=confease
DB_PASSWORD=your_secure_password_here_change_this
DB_PORT=5432

# ============================================
# SESSION & JWT SECRETS
# ============================================
# Generate random strings (minimum 32 characters)
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=change_this_to_random_32_character_string_for_session
JWT_SECRET=change_this_to_random_32_character_string_for_jwt

# ============================================
# GOOGLE OAUTH - AUTHOR ROLE
# ============================================
# Get from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_for_authors.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your_google_client_secret_for_authors
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/dashboard

# ============================================
# GOOGLE OAUTH - REVIEWER ROLE
# ============================================
GOOGLE_CLIENT_ID2=your_google_client_id_for_reviewers.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET2=GOCSPX-your_google_client_secret_for_reviewers
GOOGLE_CALLBACK_URL2=http://localhost:3000/auth2/google/dashboard2

# ============================================
# GOOGLE OAUTH - CHAIR ROLE
# ============================================
GOOGLE_CLIENT_ID3=your_google_client_id_for_chairs.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET3=GOCSPX-your_google_client_secret_for_chairs
GOOGLE_CALLBACK_URL3=http://localhost:3000/auth3/google/dashboard3

# ============================================
# GOOGLE OAUTH - INVITEE ROLE
# ============================================
GOOGLE_CLIENT_ID4=your_google_client_id_for_invitees.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET4=GOCSPX-your_google_client_secret_for_invitees
GOOGLE_CALLBACK_URL4=http://localhost:3000/auth4/google/dashboard4

# ============================================
# CLOUDINARY CONFIGURATION
# ============================================
# Get from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here

# ============================================
# EMAIL CONFIGURATION
# ============================================
# For Gmail: Use App Password (not regular password)
# Get from: https://myaccount.google.com/apppasswords
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password_here

# ============================================
# SUPABASE (Optional - if still using)
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# ============================================
# APPLICATION SETTINGS
# ============================================
NODE_ENV=production
PORT=3000

# ============================================
# INSTRUCTIONS
# ============================================
# 1. Copy this file: cp .env.example .env
# 2. Replace ALL placeholder values above with your actual credentials
# 3. NEVER commit the .env file to Git (it's in .gitignore)
# 4. For production, use strong random secrets for SESSION_SECRET and JWT_SECRET
# 5. Generate secrets: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
